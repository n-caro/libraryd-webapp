{{> head}}
{{! --------------- }}
<div class="container p-5">
  <header>
    <h1>Crea tu cuenta</h1>
    <p class="lead">Por favor, completa los datos para continuar:</p>
    <hr class="my-2">
  </header>
  <div id="showAlert"></div>
  <form id="registroClienteForm" class="py-4">
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="form-group">
          <label for="nombre"><i class="fas fa-user-alt text-muted"></i> Nombre:</label>
          <input name="nombre" id="nombre" class="form-control form-control-lg d-block" type="text" required>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="form-group">
          <label for="apellido"><i class="fas fa-user-alt text-muted"></i> Apellido:</label>
          <input name="apellido" id="apellido" class="form-control form-control-lg d-block" type="text" required>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="dni"><i class="far fa-id-card text-muted"></i> DNI:</label>
      <input name="dni" id="dni" class="form-control form-control-lg " type="text" required>
    </div>
    <div class="form-group">
      <label for="email"><i class="fas fa-at text-muted"></i> Email:</label>
      <input name="email" id="email" class="form-control form-control-lg " type="email" required>
    </div>
    <button type="submit" class="btn btn-success btn-block btn-lg my-5">Crear cuenta</button>
    <p class="lead p-2 my-2 border-top">¿Ya tienes una cuenta? <a href="/login" class="font-weight-light">Inicia sesión <i class="fas fa-sign-in-alt"></i></a></p>
    </form>
    
</div>
{{! --------------- }}
{{> footer}}